<h1>Games new</h1>
<ul>
<% @letters.each do |letter| %>
<li><%= letter %></li>
<% end %>
</ul>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label>What is the longest word you can find?</label>
  <input type="hidden" value="<%=@letters.join%>" name="letters">
  <input type="text" name="user_word" placeholder="">
  <input type="submit" value="Play">
</form>
